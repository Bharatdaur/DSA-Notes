    // mini calculator

    int a,b;
    cout<<"Enter the value of a"<<endl;
    cin>>a;

    cout<<"Enter the value of b"<<endl;
    cin>>b;

    char op;
    cout<<"Enter the operation you want to perform"<<endl;
    cin>>op;

    switch (op)
    {
    case '+': cout<<(a+b)<<endl;
        break;
    case '-': cout<<(a-b)<<endl;
        break;
    case '*': cout<<(a*b)<<endl;
        break;
    case '/': cout<<(a/b)<<endl;
        break;
    case '%': cout<<(a%b)<<endl;
        break;
    
    default:cout<<"Enter the valid operation"<<endl;
        break;
    }
